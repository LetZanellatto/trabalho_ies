#include <string.h>
#include <stdio.h>
#define MAX 100
void lerdados(char l[]){
    
scanf("%[^\n]%*C",l);
    
}

void achavazio(char l[], char x){ // função que devolve o endereço do primeiro caracter branco encontrado
int n;
n=strlen(l);
     for(int i=0;i<=n;i++){
         if(l[i]==' '){ 
             printf("a posição que se encontra o 1 espaço é %d",i+1);
            break;
         } 
    }    
    
}

int main()
{
    char l[MAX];
    char x;
    scanf("%c",&x);
    lerdados(l);
    achavazio(l,x);

    return 0;
}
