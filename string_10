#include <string.h>
#include <stdio.h>

void delete (char str[], char *c){
    char aux[100], dst[100]; int i, j;
    for(i=j=0; i<strlen(str); i++){
        if(str[i] != *c){
            aux[j++] = str[i];  
        }
    }
    strcpy(dst, aux);
    printf("%s", dst);
}

int main()
{
    char str[100], ch;
    printf("Digite uma frase: ");
    scanf("%[^\n]%*c", str);
    printf("Digite o caracter que deseja retirar da frase: ");
    scanf("%c", &ch);
    delete(str,&ch);
    return 0;
}
